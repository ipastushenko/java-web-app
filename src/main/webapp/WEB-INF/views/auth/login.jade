extends ../layout

block head
  title Login

block content
  .col-md-4.col-md-offset-4
    form(role="form", name="loginForm", action="#{urlBuilder.build('/j_spring_security_check')}", method="POST")
      if authErrorMessage
        p#auth-error-message.bg-danger
          | #{authErrorMessage}
          button#close-auth-error-message.close.pull-right(type="button")
            span(aria-hidden="true") &times;
            span.sr-only Close
      .form-group
        label(for="username") Email
        input#username.form-control(type="text", name="username", placeholder="Enter your email")
      .form-group
        label(for="password") Password
        input#password.form-control(type="password", name="password", placeholder="Password")
      .form-group
        input.btn.btn-primary.btn-block(type="submit", name="submit", value="Sing In")
      input(type="hidden", name="#{_csrf.parameterName}", value="#{_csrf.token}")
    a.btn.btn-default.btn-block(href="#{urlBuilder.build('/registration')}") Sing Up
  script(src="resources/js/lib/jquery-2.1.1.min.js")
  script(src="resources/js/login.js")
